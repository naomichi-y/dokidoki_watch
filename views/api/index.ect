<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Fitbit API Console</title>
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/foundation/6.2.4/foundation.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.8.0/styles/default.min.css">
        <style>
        .top-bar, .top-bar ul {
            color: #fff;
            background-color: #2c3840;
        }

        .top-bar a {
            color: #fff;
            text-decoration: none;
        }

        a {
            color: #2c3840;
            text-decoration: underline;
        }

        .container {
            margin-top: 4%;
            margin-bottom: 4%;
        }
        </style>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.8.0/highlight.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/foundation/6.2.4/foundation.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </head>
    <body>
        <div class="top-bar">
            <div class="top-bar-left">
                <ul class="dropdown menu" data-dropdown-menu>
                    <li class="menu-text"><a href="/"><%- @__('common.app_name') %></a></li>
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="medium-10 medium-offset-1 columns">
                    <h1><%- @__('views.index.title') %></h1>
                    <% if @endpoint?: %>
                        <form>
                            <div class="input-group">
                                <span class="input-group-label"><%- @__('views.index.endpoint') %></span>
                                <input class="input-group-field" type="text" name="endpoint" value="<%- @endpoint %>" placeholder="/profile.json">
                                <div class="input-group-button">
                                    <input type="submit" class="button" value="<%- @__('views.index.execute') %>">
                                </div>
                            </div>
                        </form>
                        <pre><code class="json"><%- @data %></code></pre>
                    <% else: %>
                        <ol>
                            <li>
                                <p><%- @__('views.index.setup_flow1') %></p>
                                <p><pre><code class="markdown"><a href="<%- @baseUrl %>users/new"><%- @baseUrl %>users/new</a></code></pre></p>
                            </li>
                            <li>
                                <p><%- @__('views.index.setup_flow2') %></p>
                                <p><pre><code class="markdown"><%- @baseUrl %>api/{users#username}</code></pre></p>
                            </li>
                        </ol>
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
